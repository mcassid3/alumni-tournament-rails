       <div class= "nav-link">
        <%= link_to 'Profile', root_path %>
      </div>
    <% end %>

    <div class= "nav-link">
      <%= link_to 'Home', root_path %>
    </div>

    <div class= "nav-link">
      <%= link_to 'Enter A Team', root_path %>
    </div>

    <div class= "nav-link">
      <%= link_to 'Join A Team', new_player_path %>
