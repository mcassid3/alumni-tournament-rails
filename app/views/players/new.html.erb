<h1 class = "header">Player Registration <%= @tournament.name  %></h1>

<div class="sign-up-container">
  <%= form_for [@player] do |f| %>
    <div class="form-row">
      <%= f.label :first_name %>
      <%= f.text_field :first_name %>
      <%= f.label :last_name  %>
      <%= f.text_field :last_name %>
    </div>

    <div class="form-row">
      <%= f.label :email%>
      <%= f.text_field :email%> 
      <%= f.label :password%>
      <%= f.text_field :password%>         
    </div>

    <div class="form-row">
      <%= f.label :school_id, "School Name"%>
      <%= f.select :school_id, options_for_select(School.all) %>  
    </div>

    <div class="form-row">
      <%= f.label :cell, "Cell Phone"%>
      <%= f.text_field :cell%>      
      <%= f.label "Select your team:" %>
      <%= f.select :current_team, options_for_select(@active_teams_arr) %>  
    </div>

    <div class="form-row">
      <%= f.label "Are you the captain" %>
      <%= f.label "Yes" %>
      <%= f.radio_button :captain, true%>
      <%= f.label "No" %>
      <%= f.radio_button :captain, false%>     
    </div>

  
    <div class="form-row">
      <%= f.submit "Sign Up" %>
    </div>


<% end %>


  
</div>